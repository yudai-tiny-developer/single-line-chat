{
    "manifest_version": 3,
    "name": "Force Single Line for YouTube Live Chat",
    "version": "1.4.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "css": [
                "content.css"
            ],
            "run_at": "document_end",
            "matches": [
                "https://www.youtube.com/live_chat*"
            ],
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{51a919c7-f35c-494b-ac8d-075bf2afb576}"
        }
    }
}